<ul class="Management__list">
  {{#each model as |greenHouse|}}
      <li class="Management__greenhouse">
          <div class="Management__greenhouse-header">
            <div class="number">
                <span>Serre&nbsp;<small>n°</small></span>
                <span>{{greenHouse.id}}</span>
            </div>
            <div class="type">
                <span>-</span>
                <span>{{greenHouse.type}}</span>
                <span>-</span>
            </div>
          </div>
          <div class="dimention">
              <span>Dimention&nbsp;</span>
              <span>{{greenHouse.width}} &times; {{greenHouse.height}}</span>
          </div>
          <div class="barre-btn">
              <button class="btn btn-update" {{action 'editAll' greenHouse on='click'}}> Modifications </button>
              <button class="btn btn-trairement" {{action 'editCultivation' greenHouse on='click'}}> Traitements </button>
              <button class="btn btn-observ" {{action 'editObservation' greenHouse on='click'}}> Observations </button>
          </div>

          <dl class="info">

              <dt>Étapes</dt>
              <dd>{{greenHouse.step}}</dd>
              <dt>Traitement en cours</dt>
              <dd>{{greenHouse.cultivation}}</dd>
              <dt>Observations</dt>
              <dd>{{greenHouse.observation}}</dd>
          </dl>
          <div class="realm">
              <div class="realm-header">
                <span>Realm</span>
                <span>{{greenHouse.realm.id}}</span>
              </div>
            <ul>
            {{#each greenHouse.realm.sensors as |sensor|}}
                <dl class="sensor">
                    <dt></dt>
                    <dt><span>{{sensor.id}}</span></dt>
                    <dd><span class="value">{{sensor.lastValue}}&nbsp;{{sensor.unit}}</span><span>&nbsp;&nbsp;<i>({{sensor.name}})</i></span></dd>
                </dl>
            {{/each}}
          </ul>
        </div>
      </li>
  {{/each}}
    <li class="Management__greenhouse ">
      <button class="btn-new" {{action 'newSerre' greenHouse on='click'}} ><img src="/assets/plus.png"> </button>
    </li>
</ul>
{{outlet}}
