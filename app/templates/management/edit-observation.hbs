<div class="overlayer"></div>
<div class="Management__modal">
    <div class="modal-header">
        <span class="name">{{model.id}}</span>
      {{#link-to 'management' class="btn close btn-delet"}}&times; Annuler{{/link-to}}
    </div>
    <form class="modal-form" {{action 'saveGreenHouse' model on='submit'}}>
        <div class="modal-body">
            <div class="form-row">
                <label for="height">Observations</label>
              {{textarea value=model.observation class="form-control" rows="15"}}
            </div>
        </div>
        <div class="modal-footer">
          {{#link-to 'management' class="btn close btn-save"}}&#10004; Sauvegarder {{/link-to}}
        </div>
    </form>
</div>
