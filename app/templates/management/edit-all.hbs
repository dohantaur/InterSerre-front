<div class="overlayer"></div>
<div class="Management__modal">
  <div class="modal-header">
      <span class="name">{{id}}</span>
      {{#link-to management class="close btn-delet"}}&times;{{/link-to}}
  </div>
  <form class="modal-form" {{action 'saveGreenHouse' model on='submit'}}>
      <div class="modal-body">
          <div class="form-row">
              <label for="type">Type</label>
              {{input name="type" type="text" value=model.type}}
          </div>
          <div class="form-row">
              <label for="step">Ã‰tapes</label>
              <div>{{listEtape}}</div>
              {{view "select" content=listEtape selection=model.step class="form-control"}}
          </div>
          <div class="form-row">
              <label for="width">Dimension </label>
              {{input name="width" type="number" value=model.width}}&times;{{input name="height" type="number" value=model.height}}
          </div>
          <div class="form-row">
              <label for="height">Traitement en cours</label>
              {{textarea value=model.cultivation cols="50" rows="2"}}
          </div>
          <div class="form-row">
              <label for="height">Observations</label>
              {{textarea value=model.observation cols="50" rows="4"}}
          </div>
      </div>
      <div class="modal-footer">
          <input type="submit" value="sauvegarder">
      </div>
  </form>
</div>
